{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <section class="background-video-wrapper position-relative vh-100 d-flex align-items-center justify-content-center">
        <!-- Background Video -->
        <video autoplay muted loop playsinline class="background-video">
            <source src="{{ asset('assets/videos/background.mp4') }}" type="video/mp4">
            Your browser does not support the video tag.
        </video>

        <!-- Overlay -->
        <div class="overlay"></div>

        <!-- Foreground Content -->
        <div class="card shadow-lg p-4 position-relative">
            <div class="card-body">
                <h1 class="h4 text-center mb-4"><i class="fas fa-sign-in-alt"></i> Connexion</h1>

                <!-- Display error message if any -->
                {% if error %}
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle"></i> {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <!-- Check if user is already logged in -->
                {% if app.user %}
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Vous êtes connecté en tant que {{ app.user.userIdentifier }}. 
                        <a href="{{ path('app_logout') }}">Déconnexion</a>
                    </div>
                {% endif %}

                <!-- Login form -->
                <form method="post">
                    <div class="form-floating mb-3">
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        <label for="inputEmail">Email</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        <label for="inputPassword">Mot de passe</label>
                    </div>

                    <!-- CSRF token -->
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <!-- Submit button -->
                    <div class="text-center">
                        <button class="btn btn-success btn-lg w-100" type="submit">
                            <i class="fas fa-sign-in-alt"></i> Se Connecter
                        </button>
                    </div>

                    <div class="text-center mt-3">
                        <small>Vous n'avez pas de compte? <a href="{{ path('app_user_new') }}">Créer un compte</a></small>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <!-- Styling -->
    <style>
        .background-video-wrapper {
            position: relative;
            width: 100%;
            height: 100vh;
            overflow: hidden;
        }

        .background-video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: -1;
        }

        .card {
            background-color: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            width: 100%;
            max-width: 500px;
            z-index: 1;
            border: 2px solid #D4AF37;
        }

        .form-floating label {
            color: #6c757d;
        }

        .btn-success {
            background: linear-gradient(135deg, #009246 0%, #00a854 100%);
            border: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-success:hover {
            background: linear-gradient(135deg, #00a854 0%, #009246 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 146, 70, 0.3);
        }

        .form-control {
            border: 2px solid #E8D7C3;
            border-radius: 8px;
        }

        .form-control:focus {
            border-color: #CE1126;
            box-shadow: 0 0 0 0.2rem rgba(206, 17, 38, 0.15);
        }

        .alert {
            border-radius: 8px;
            border: 2px solid;
        }

        .alert-danger {
            border-color: #CE1126;
            background-color: rgba(206, 17, 38, 0.1);
            color: #CE1126;
        }

        .alert-info {
            border-color: #003DA5;
            background-color: rgba(0, 61, 165, 0.1);
            color: #003DA5;
        }

        a {
            color: #CE1126;
            text-decoration: none;
            font-weight: 600;
        }

        a:hover {
            text-decoration: underline;
            color: #003DA5;
        }

        h1 {
            color: #CE1126;
        }
    </style>
{% endblock %}
