{% extends 'base.html.twig' %}

{% block title %}Détails de l'Avis{% endblock %}

{% block body %}
    <div class="heritage-pattern">
        <h1><i class="fas fa-star"></i> Détails de l'Avis</h1>
    </div>

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <th><i class="fas fa-tag"></i> ID</th>
                                    <td>{{ review.id }}</td>
                                </tr>
                                <tr>
                                    <th><i class="fas fa-star"></i> Note</th>
                                    <td>
                                        {{ review.rating }}/10
                                        <div class="mt-2">
                                            {% set stars = review.rating > 5 ? 5 : review.rating %}
                                            {% for i in 1..stars %}
                                                <i class="fas fa-star text-warning"></i>
                                            {% endfor %}
                                            {% for i in stars+1..5 %}
                                                <i class="fas fa-star" style="color: #ddd;"></i>
                                            {% endfor %}
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <th><i class="fas fa-comment"></i> Commentaire</th>
                                    <td>{{ review.comment }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer bg-transparent border-top">
                        <a href="{{ path('app_review_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour à la Liste
                        </a>
                    </div>
                </div>

                <div class="mt-4">
                    {{ include('review/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
