{% extends 'base.html.twig' %}

{% block title %}Avis{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .heritage-pattern {
            text-align: center;
            margin-top: 100px;
            color: #343a40;
        }

        .heritage-pattern h1 {
            font-size: 2.5rem;
            font-weight: bold;
        }

        .card {
            border: none;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .card img {
            height: 200px;
            object-fit: cover;
        }

        .card-body {
            padding: 15px;
        }

        .card-title {
            font-size: 1.25rem;
            color: #007bff;
            font-weight: bold;
        }

        .card-text {
            color: #6c757d;
            font-size: 0.9rem;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-success {
            background-color: #28a745;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
        }

        .btn-success:hover {
            background-color: #218838;
        }

        .star-rating {
            text-align: center;
            margin-bottom: 10px;
        }

        .star-rating i {
            text-shadow: 0 0 5px rgba(255, 215, 0, 0.6), 0 0 10px rgba(255, 215, 0, 0.4);
            transition: transform 0.2s ease-in-out;
        }

        .star-rating .fa:hover {
            transform: scale(1.3);
        }

        .star-rating .fa {
            color: #ffd700 !important;
            text-shadow: 0 0 10px rgba(255, 215, 0, 0.7), 0 0 20px rgba(255, 215, 0, 0.7);
        }

        .star-rating .fa-star {
            color: #ffd700 !important;
            transform: scale(1.1);
        }

        .star-rating .fa-star-o {
            color: #d3d3d3 !important;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="heritage-pattern">
        <h1><i class="fas fa-star"></i> Nos Avis</h1>
    </div>

    <div class="container my-5">
        <div class="row g-4">
            {% for review in reviews %}
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <!-- Star Rating Display -->
                            <div class="mb-3">
                                {% set stars = review.rating > 5 ? 5 : review.rating %}
                                {% for i in 1..stars %}
                                    <i class="fas fa-star text-warning"></i>
                                {% endfor %}
                                {% for i in stars+1..5 %}
                                    <i class="fas fa-star" style="color: #ddd;"></i>
                                {% endfor %}
                            </div>
                            <h5 class="card-title">Note: {{ review.rating }}/10</h5>
                            <p class="card-text">
                                <strong><i class="fas fa-comment"></i> Commentaire:</strong><br>
                                {{ review.comment }}
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-top">
                            <a href="{{ path('app_review_show', {'id': review.id}) }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-eye"></i> Voir les Détails
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info text-center" role="alert">
                        <i class="fas fa-info-circle"></i> Aucun avis disponible pour le moment
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="text-center mt-5">
        <a href="{{ path('app_review_new') }}" class="btn btn-success btn-lg">
            <i class="fas fa-plus"></i> Créer un Nouvel Avis
        </a>
    </div>
{% endblock %}
