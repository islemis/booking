{% extends 'base.html.twig' %}

{% block title %}Éditer Réservation{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .form-container {
            background-color: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: 0 auto;
        }

        .form-title {
            font-size: 1.75rem;
            color: #007bff;
            font-weight: bold;
            margin-bottom: 30px;
            text-align: center;
        }

        .form-group label {
            font-weight: 500;
            color: #343a40;
        }

        .form-control, .form-select {
            border-radius: 8px;
            border: 1px solid #dee2e6;
            padding: 12px;
        }

        .form-control:focus, .form-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        .booking-info {
            background-color: #e7f3ff;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
        }

        .booking-info h5 {
            color: #007bff;
            margin-bottom: 15px;
        }

        .booking-info p {
            margin-bottom: 8px;
            color: #6c757d;
        }

        .btn-container {
            display: flex;
            gap: 10px;
            justify-content: center;
            margin-top: 30px;
        }

        .btn {
            padding: 12px 30px;
            font-size: 1rem;
            border-radius: 8px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="form-container">
            <h1 class="form-title">
                <i class="fas fa-edit"></i> Éditer la Réservation
            </h1>

            <!-- Booking Information -->
            <div class="booking-info">
                <h5><i class="fas fa-info-circle"></i> Informations de la Réservation</h5>
                <p>
                    <strong>Annonce:</strong> {{ booking.listingId.title }}
                </p>
                <p>
                    <strong>Locataire:</strong> {{ booking.userId.firstName }} {{ booking.userId.lastName }}
                </p>
                <p>
                    <strong>Du:</strong> {{ booking.startDate|date('d/m/Y') }}
                </p>
                <p>
                    <strong>Au:</strong> {{ booking.endDate|date('d/m/Y') }}
                </p>
            </div>

            <!-- Edit Form -->
            <form method="POST" novalidate>
                <div class="form-group mb-3">
                    <label for="status" class="form-label">
                        <i class="fas fa-tag"></i> Statut de la Réservation
                    </label>
                    <select id="status" name="booking[status]" class="form-select" required>
                        <option value="">-- Sélectionnez un statut --</option>
                        <option value="pending" {% if booking.status == 'pending' %}selected{% endif %}>
                            En attente
                        </option>
                        <option value="approved" {% if booking.status == 'approved' %}selected{% endif %}>
                            Approuvé
                        </option>
                        <option value="rejected" {% if booking.status == 'rejected' %}selected{% endif %}>
                            Rejeté
                        </option>
                    </select>
                </div>

                <div class="form-group mb-3">
                    <label for="phoneNumber" class="form-label">
                        <i class="fas fa-phone"></i> Numéro de Téléphone (Réservation)
                    </label>
                    <input 
                        type="text" 
                        id="phoneNumber" 
                        name="booking[phoneNumber]" 
                        class="form-control" 
                        value="{{ booking.phoneNumber }}"
                        placeholder="Entrez un numéro de téléphone"
                    >
                </div>

                <div class="btn-container">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Enregistrer les Modifications
                    </button>
                    <a href="{{ path('app_owner_bookings') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Annuler
                    </a>
                </div>

                {{ form_end(form) }}
            </form>
        </div>
    </div>
{% endblock %}
