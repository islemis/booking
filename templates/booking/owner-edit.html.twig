{% extends 'base.html.twig' %}

{% block title %}Éditer Réservation{% endblock %}

{% block body %}
<div class="container my-5">
    <h1><i class="fas fa-edit"></i> Éditer Réservation</h1>

    <div class="card mt-4">
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}

            <div class="col-md-6">
                <label class="form-label"><strong>Client:</strong></label>
                <input type="text" class="form-control" value="{{ booking.userId.email }}" disabled>
            </div>

            <div class="col-md-6">
                <label class="form-label"><strong>Annonce:</strong></label>
                <input type="text" class="form-control" value="{{ booking.listingId.title }}" disabled>
            </div>

            <div class="col-md-6">
                <label class="form-label">Date de Début</label>
                {{ form_widget(form.startDate, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.startDate) }}
            </div>

            <div class="col-md-6">
                <label class="form-label">Date de Fin</label>
                {{ form_widget(form.endDate, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.endDate) }}
            </div>

            <div class="col-md-6">
                <label class="form-label">Numéro de Téléphone</label>
                {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.phoneNumber) }}
            </div>

            <div class="col-md-6">
                <label class="form-label">Statut</label>
                {{ form_widget(form.status, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.status) }}
            </div>

            <div class="col-12">
                <button class="btn btn-primary">
                    <i class="fas fa-save"></i> Sauvegarder
                </button>
                <a href="{{ path('app_owner_bookings') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
