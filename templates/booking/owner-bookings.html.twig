{% extends 'base.html.twig' %}

{% block title %}Réservations Reçues{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .heritage-pattern {
            text-align: center;
            margin-top: 30px;
            color: #343a40;
        }

        .heritage-pattern h1 {
            font-size: 2rem;
            font-weight: bold;
        }

        .card {
            border: none;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .card-body {
            padding: 20px;
        }

        .card-title {
            font-size: 1.25rem;
            color: #007bff;
            font-weight: bold;
        }

        .card-text {
            color: #6c757d;
            font-size: 0.95rem;
            margin-bottom: 10px;
        }

        .badge {
            font-size: 0.9rem;
            padding: 5px 10px;
        }

        .status-pending {
            background-color:  #007bff;
        }

        .status-approved {
            background-color: #28a745;
        }

        .status-rejected {
            background-color: #dc3545;
        }

        .tenant-info {
            background-color: #e7f3ff;
            padding: 15px;
            border-radius: 10px;
            margin: 10px 0;
        }

        .btn-sm {
            padding: 5px 12px;
            font-size: 0.85rem;
        }

        .action-buttons {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="heritage-pattern">
        <h1><i class="fas fa-inbox"></i> Réservations Reçues</h1>
        <p class="text-muted">Gérez les réservations de vos annonces</p>
    </div>

    <div class="container my-5">
        {% if bookings|length > 0 %}
            <div class="row g-4">
                {% for booking in bookings %}
                    {% set listing = booking.listingId %}
                    {% set tenant = booking.userId %}
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <!-- Listing Info -->
                                <h5 class="card-title">{{ listing.title }}</h5>
                                <p class="card-text">
                                    <i class="fas fa-map-marker-alt"></i> {{ listing.address }}
                                </p>
                                <p class="card-text">
                                    <strong>Prix:</strong> {{ listing.rentPrice }} TND/mois
                                </p>

                                <!-- Booking Dates -->
                                <p class="card-text">
                                    <strong><i class="fas fa-calendar-alt"></i> Du:</strong> 
                                    {{ booking.startDate ? booking.startDate|date('d/m/Y') : '-' }}
                                </p>
                                <p class="card-text">
                                    <strong><i class="fas fa-calendar-alt"></i> Au:</strong> 
                                    {{ booking.endDate ? booking.endDate|date('d/m/Y') : '-' }}
                                </p>

                                <!-- Status Badge -->
                                <p class="card-text">
                                    <strong>Statut:</strong> 
                                    {% if booking.status == 'pending' %}
                                        <span class="badge status-pending" style="color: yellow;">En attente</span>
                                    {% elseif booking.status == 'approved' %}
                                       <span class="badge status-approved" style="color: green;">Approuvé</span>
                                    {% elseif booking.status == 'rejected' %}
                                        <span class="badge status-rejected" style="color: red;>Rejeté</span>
                                    {% else %}
                                        <span class="badge bg-secondary">{{ booking.status }}</span>
                                    {% endif %}
                                </p>

                                <!-- Tenant Info -->
                                <div class="tenant-info">
                                    <strong><i class="fas fa-user"></i> Locataire</strong>
                                    <p class="mb-2">{{ tenant.firstName }} {{ tenant.lastName }}</p>
                                    <p class="mb-1">
                                        <small><i class="fas fa-envelope"></i> {{ tenant.email }}</small>
                                    </p>
                                    {% if tenant.phoneNumber %}
                                        <p>
                                            <small><i class="fas fa-phone"></i> {{ tenant.phoneNumber }}</small>
                                        </p>
                                    {% endif %}
                                </div>

                                <!-- Booking Phone if provided -->
                                {% if booking.phoneNumber %}
                                    <p class="card-text">
                                        <strong><i class="fas fa-phone"></i> Téléphone Réservation:</strong> {{ booking.phoneNumber }}
                                    </p>
                                {% endif %}
                            </div>

                            <div class="card-footer bg-transparent border-top">
                                <div class="action-buttons">
                                    <a href="{{ path('app_listing_show', {'id': listing.id}) }}" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i> Annonce
                                    </a>
                                    <a href="{{ path('app_owner_booking_edit', {'id': booking.id}) }}" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Éditer
                                    </a>
                                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal{{ booking.id }}">
                                        <i class="fas fa-trash"></i> Supprimer
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Delete Modal -->
                    <div class="modal fade" id="deleteModal{{ booking.id }}" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteModalLabel">Supprimer la Réservation</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Êtes-vous sûr de vouloir supprimer cette réservation de <strong>{{ tenant.firstName }} {{ tenant.lastName }}</strong> ?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                    <form method="POST" action="{{ path('app_owner_booking_delete', {'id': booking.id}) }}" style="display:inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ booking.id) }}">
                                        <button type="submit" class="btn btn-danger">Supprimer</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info text-center" role="alert">
                <i class="fas fa-inbox"></i> Aucune réservation pour vos annonces
            </div>
        {% endif %}
    </div>

    <div class="text-center mt-5">
        <a href="{{ path('app_listing_index') }}" class="btn btn-primary btn-lg">
            <i class="fas fa-arrow-left"></i> Retour aux Annonces
        </a>
    </div>
{% endblock %}
