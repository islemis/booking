{% extends 'base.html.twig' %}

{% block title %}Ekrili Dwira - Location d'Appartements{% endblock %}

{% block body %}
<div class="homepage-wrapper">
    <!-- Fullscreen background image -->
    <div class="background-image">
        <div class="overlay">
            <div class="content">
                <h1 class="title text-white display-3 fw-bold">Ekrili Dwira</h1>
                <p class="subtitle text-white fs-4 mb-4">DÃ©couvrez les meilleures locations d'appartements en Tunisie</p>
            </div>
        </div>
    </div>
</div>

<style>
    /* Ensure full height of the body and html */
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    .homepage-wrapper {
        width: 100%;
        overflow-x: hidden;
        margin: 0;
        padding: 0;
    }

    /* Fullscreen Moving Background Image */
    .background-image {
        background-image: url('{{ asset('images/screen.jpg') }}');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        height: 100vh;
        width: 100%;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: -1;
        margin: 0;
        padding: 0;
    }

    /* Overlay to darken the background */
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .content {
        text-align: center;
        max-width: 800px;
        margin: 0 auto;
    }

    .title {
        font-size: 3.5rem;
        font-weight: 700;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.7);
        letter-spacing: 2px;
        margin-bottom: 1rem;
    }

    .subtitle {
        font-size: 1.5rem;
        margin-bottom: 2rem;
        text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.6);
        font-weight: 300;
    }
</style>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

{% endblock %}