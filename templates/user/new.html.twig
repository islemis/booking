{% extends 'base.html.twig' %}

{% block title %}Créer un Compte{% endblock %}

{% block body %}
    <section class="background-video-wrapper position-relative vh-100 d-flex align-items-center justify-content-center">
        <!-- Background Video -->
        <video autoplay muted loop playsinline class="background-video">
            <source src="{{ asset('assets/videos/background.mp4') }}" type="video/mp4">
            Your browser does not support the video tag.
        </video>

        <!-- Foreground Content -->
        <div class="card bg-glass shadow-lg p-4 position-relative">
            <div class="card-body">
                <h1 class="h4 text-center mb-4"><i class="fas fa-user-plus"></i> Créer un Compte</h1>

                {{ form_start(form) }}

                <!-- Form Fields -->
                <div class="form-floating mb-3">
                    {{ form_row(form.firstName, {
                        'label': 'Prénom',
                        'attr': {'placeholder': 'Prénom', 'class': 'form-control'}
                    }) }}
                </div>

                <div class="form-floating mb-3">
                    {{ form_row(form.lastName, {
                        'label': 'Nom',
                        'attr': {'placeholder': 'Nom', 'class': 'form-control'}
                    }) }}
                </div>

                <div class="form-floating mb-3">
                    {{ form_row(form.phoneNumber, {
                        'label': 'Numéro de Téléphone',
                        'attr': {'placeholder': 'Numéro de téléphone', 'class': 'form-control'}
                    }) }}
                </div>

                <div class="form-floating mb-3">
                    {{ form_row(form.username, {
                        'label': 'Nom d\'utilisateur',
                        'attr': {'placeholder': 'Nom d\'utilisateur', 'class': 'form-control'}
                    }) }}
                </div>

                <div class="form-floating mb-3">
                    {{ form_row(form.email, {
                        'label': 'Email',
                        'attr': {'placeholder': 'Email', 'class': 'form-control'}
                    }) }}
                </div>

                <div class="form-floating mb-3">
                    {{ form_row(form.password, {
                        'label': 'Mot de passe',
                        'attr': {'placeholder': 'Mot de passe', 'class': 'form-control'}
                    }) }}
                </div>

                <!-- Role Selection -->
                <div class="mb-4">
                    <label class="form-label"><strong><i class="fas fa-user-tag"></i> {{ form.roles.vars.label }}</strong></label>
                    <div class="role-selection">
                        {% for child in form.roles %}
                            <div class="form-check role-option">
                                {{ form_widget(child, {'attr': {'class': 'form-check-input role-radio'}}) }}
                                <label class="form-check-label role-label" for="{{ child.vars.id }}">
                                    {% if 'locataire' in child.vars.label|lower %}
                                        <i class="fas fa-search"></i> {{ child.vars.label }}
                                    {% else %}
                                        <i class="fas fa-home"></i> {{ child.vars.label }}
                                    {% endif %}
                                </label>
                            </div>
                        {% endfor %}
                    </div>
                    <small class="text-muted d-block mt-2">{{ form.roles.vars.help }}</small>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button class="btn btn-success btn-lg w-100" type="submit">
                        <i class="fas fa-check-circle"></i> Créer le Compte
                    </button>
                </div>

                <div class="text-center mt-3">
                    <small>Vous avez déjà un compte? <a href="{{ path('app_login') }}">Connectez-vous</a></small>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </section>

    <!-- Styling -->
    <style>
        .background-video-wrapper {
            position: relative;
            width: 100%;
            height: 100vh;
            overflow: hidden;
        }

        .background-video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: -1;
        }

        .card {
            background-color: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            width: 100%;
            max-width: 550px;
            max-height: 90vh;
            overflow-y: auto;
            z-index: 1;
            border: 2px solid #D4AF37;
        }

        .form-floating label {
            color: #6c757d;
        }

        .form-control {
            border: 2px solid #E8D7C3;
            border-radius: 8px;
        }

        .form-control:focus {
            border-color: #CE1126;
            box-shadow: 0 0 0 0.2rem rgba(206, 17, 38, 0.15);
        }

        .btn-success {
            background: linear-gradient(135deg, #009246 0%, #00a854 100%);
            border: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-success:hover {
            background: linear-gradient(135deg, #00a854 0%, #009246 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 146, 70, 0.3);
        }

        .role-selection {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin-top: 15px;
        }

        .role-option {
            position: relative;
            padding: 15px;
            border: 2px solid #E8D7C3;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            background-color: #f9f9f9;
        }

        .role-option:hover {
            border-color: #CE1126;
            background-color: rgba(206, 17, 38, 0.05);
        }

        .role-radio {
            margin-top: 3px;
        }

        .role-radio:checked + .role-label {
            color: #CE1126;
            font-weight: 600;
        }

        .role-option input[type="radio"]:checked {
            border-color: #CE1126;
            background-color: #CE1126;
        }

        .role-option input[type="radio"]:checked ~ .role-label {
            color: #CE1126;
            font-weight: 600;
        }

        .role-option.checked {
            border-color: #CE1126;
            background-color: rgba(206, 17, 38, 0.1);
        }

        .role-label {
            font-size: 0.95rem;
            margin-bottom: 0;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .role-label i {
            margin-right: 5px;
        }

        .form-label {
            color: #333;
            margin-bottom: 15px;
            font-size: 1rem;
        }

        a {
            color: #CE1126;
            text-decoration: none;
            font-weight: 600;
        }

        a:hover {
            text-decoration: underline;
            color: #003DA5;
        }

        h1 {
            color: #CE1126;
        }

        @media (max-width: 768px) {
            .role-selection {
                grid-template-columns: 1fr;
            }

            .card {
                max-width: 90%;
            }
        }
    </style>
{% endblock %}