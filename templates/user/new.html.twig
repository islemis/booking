{% extends 'base.html.twig' %}

{% block title %}Créer un Compte{% endblock %}

{% block body %}
<section class="form-section d-flex align-items-center justify-content-center vh-100">

    <!-- Card/Form Wrapper -->
    <div class="card">
        <h2 class="text-center mb-4"><i class="fas fa-user-plus"></i> Créer un Compte</h2>

        {{ form_start(form) }}

        <!-- Form Fields -->
        {% for field in form %}
{% if field.vars.name != 'roles' and field.vars.name != '_token' %}
                <div class="mb-3">
                    {{ form_label(field) }}
                    {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(field) }}
                </div>
            {% endif %}
        {% endfor %}

        <!-- Role Selection -->
        <div class="mb-4">
            <label class="form-label"><strong><i class="fas fa-user-tag"></i> {{ form.roles.vars.label }}</strong></label>
            <div class="role-selection">
                {% for child in form.roles %}
                    <div class="role-option">
                        {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
                        <label class="form-check-label" for="{{ child.vars.id }}">
                            {{ child.vars.label }}
                        </label>
                    </div>
                {% endfor %}
            </div>
        </div>

        <!-- Submit Button -->
        <button class="btn btn-primary w-100 mb-2" type="submit">
            <i class="fas fa-check-circle"></i> Créer le Compte
        </button>

        <div class="text-center mt-2">
            <small>Vous avez déjà un compte? <a href="{{ path('app_login') }}">Connectez-vous</a></small>
        </div>

        {{ form_end(form) }}
    </div>
</section>

<style>
body {
    background-color: #f5f5f5;
}

.form-section {
    padding: 2rem;
}

.card {
    width: 100%;
    max-width: 600px; /* plus grand formulaire */
    padding: 3rem;     /* plus de padding pour respirer */
    border-radius: 12px;
    background-color: #ffffff;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
}

.form-control {
    border-radius: 8px;
    border: 1px solid #ccc;
    padding: 0.75rem 1rem; /* plus grand input */
}

.btn-primary {
    background-color: #CE1126;
    border: none;
    font-weight: 600;
    padding: 0.75rem 0;
}

.btn-primary:hover {
    background-color: #CE1126; /* pas d'effet hover */
}

.role-selection {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
}

.role-option {
    flex: 1;
    min-width: 120px;
    padding: 15px;
    border: 1px solid #ddd;
    border-radius: 8px;
    text-align: center;
    background-color: #fafafa;
    cursor: default; /* enlever hover animé */
}

.role-option input[type="radio"]:checked + label {
    color: #CE1126;
    font-weight: bold;
}

a {
    color: #CE1126;
    font-weight: 600;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
    color: #003DA5;
}

@media (max-width: 576px) {
    .role-selection {
        flex-direction: column;
    }
}
</style>
{% endblock %}
