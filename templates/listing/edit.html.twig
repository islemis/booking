{% extends 'base.html.twig' %}

{% block title %}Éditer une Annonce{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="heritage-pattern">
        <h1><i class="fas fa-edit"></i> Éditer une Annonce</h1>
    </div>

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-7">
                <div class="card">
                    <div class="card-header">
                        <i class="fas fa-list"></i> Détails de l'Annonce
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_row(form.title, {'label': 'Titre', 'attr': {'class': 'form-control', 'placeholder': 'Titre de l\'annonce'}}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(form.description, {'label': 'Description', 'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'Description détaillée'}}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(form.address, {'label': 'Adresse', 'attr': {'class': 'form-control', 'placeholder': 'Adresse complète'}}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(form.rentPrice, {'label': 'Prix de Location (TND)', 'attr': {'class': 'form-control', 'type': 'number', 'step': '0.01'}}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(form.availableFrom, {'label': 'Disponible à partir du', 'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_row(form.appartment, {'label': 'Appartement', 'attr': {'class': 'form-control'}}) }}
                            </div>
                                 <div class="mb-3">
    {{ form_row(form.imagesUpload, {
        'label': 'Images',
        'attr': {'class': 'form-control', 'multiple': 'multiple'}
    }) }}
    <div id="previewImages" class="mt-2 d-flex flex-wrap gap-2"></div>
</div>
                            <button type="submit" class="btn btn-primary btn-lg w-100 mb-2">
                                <i class="fas fa-save"></i> Enregistrer les Modifications
                            </button>
                        {{ form_end(form) }}
                        <a href="{{ path('app_listing_index') }}" class="btn btn-secondary w-100">
                            <i class="fas fa-arrow-left"></i> Retour à la Liste
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <form method="POST" action="{{ path('app_listing_delete', {'id': listing.id}) }}" style="display:inline;">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ listing.id) }}">
            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette annonce ?')">
                <i class="fas fa-trash"></i> Supprimer l'Annonce
            </button>
        </form>
    </div>
{% endblock %}
