{% extends 'base.html.twig' %}

{% block title %}Annonces{% endblock %}

{% block stylesheets %}
    <!-- Custom Styles (after Bootstrap) -->
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        h1 {
            color: #343a40;
            text-align: center;
            margin-top: 30px;
        }

        .table-container {
            width: 90%;
            margin: 40px auto;
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        table th, table td {
            text-align: center;
            padding: 15px;
        }

        table th {
            background-color: #007bff;
            color: white;
            font-weight: bold;
        }

        table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        table tr:hover {
            background-color: #f1f1f1;
        }

        .actions a {
            margin-right: 10px;
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
        }

        .actions a:hover {
            text-decoration: underline;
        }

        .create-btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            text-align: center;
            margin-top: 20px;
        }

        .create-btn:hover {
            background-color: #0056b3;
        }

        /* Additional Custom Style */
        body {
            background-color: lightblue;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="heritage-pattern">
        <h1><i class="fas fa-list"></i> Nos Annonces</h1>
    </div>

    <div class="container my-5">
        {% if listings is not empty %}
            <div class="row g-4">
                {% for listing in listings %}
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">{{ listing.title }}</h5>
                                <p class="card-text">
                                    <strong><i class="fas fa-money-bill"></i> Prix:</strong> {{ listing.rentPrice }} TND
                                </p>
                                <p class="card-text">
                                    <strong><i class="fas fa-map-marker-alt"></i> Adresse:</strong> {{ listing.address }}
                                </p>
                                <p class="card-text">
                                    <strong><i class="fas fa-file-alt"></i> Description:</strong><br>
                                    {% if listing.description|length > 100 %}
                                        {{ listing.description|slice(0, 100) }}...
                                    {% else %}
                                        {{ listing.description }}
                                    {% endif %}
                                </p>
                            </div>
                            <div class="card-footer bg-transparent border-top">
                                <a href="{{ path('app_listing_show', {'id': listing.id}) }}" class="btn btn-primary btn-sm">
                                    <i class="fas fa-eye"></i> Voir les détails
                                </a>
                                
                                <!-- Show edit/delete buttons only for owner or admin -->
                                {% if is_granted('ROLE_ADMIN') or (app.user and app.user.id == listing.owner.id) %}
                                    <a href="{{ path('app_listing_edit', {'id': listing.id}) }}" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                    <form method="post" action="{{ path('app_listing_delete', {'id': listing.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ listing.id) }}">
                                        <button class="btn btn-sm btn-danger" type="submit">
                                            <i class="fas fa-trash"></i> Supprimer
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info text-center" role="alert">
                <i class="fas fa-info-circle"></i> Aucune annonce disponible pour le moment
            </div>
        {% endif %}
    </div>

    <div class="text-center mt-5">
        <!-- Only ROLE_OWNER and ROLE_ADMIN can create announcements -->
        {% if is_granted('ROLE_OWNER') or is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_listing_new') }}" class="btn btn-success btn-lg">
                <i class="fas fa-plus"></i> Créer une Annonce
            </a>
        {% endif %}
    </div>
{% endblock %}
