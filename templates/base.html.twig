<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Ekrili Dwira{% endblock %}</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link href="{{ asset('styles/app.css') }}" rel="stylesheet">

    <!-- Reset Margins and Padding -->
    <style>
        body, html {
            margin: 0;
            padding: 0;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container-fluid">
            <!-- Brand -->
            <a class="navbar-brand" href="{{ path('homepage') }}">
                <i class="fas fa-key"></i> Ekrili Dwira
            </a>
            
            <!-- Toggler -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <!-- Navbar Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('homepage') }}">
                            <i class="fas fa-home"></i> Accueil
                        </a>
                    </li>

                    <!-- Public Links - visible to all -->
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_appartment_index') }}">
                            <i class="fas fa-building"></i> Appartements
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_listing_index') }}">
                            <i class="fas fa-list"></i> Annonces
                        </a>
                    </li>

                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <!-- Owner/Landlord only links -->
                        {% if is_granted('ROLE_OWNER') %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="ownerMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-hammer"></i> Gérer
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="ownerMenu">
                                    <li><a class="dropdown-item" href="{{ path('app_appartment_new') }}">
                                        <i class="fas fa-plus"></i> Créer Appartement
                                    </a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_listing_new') }}">
                                        <i class="fas fa-plus"></i> Créer Annonce
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="{{ path('app_owner_bookings') }}">
                                        <i class="fas fa-calendar-check"></i> Réservations Reçues
                                    </a></li>
                                   
                                    
                                </ul>
                            </li>
                        {% endif %}

                        <!-- User/Tenant links -->
                        {% if is_granted('ROLE_USER') and not is_granted('ROLE_OWNER') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_booking_index') }}">
                                    <i class="fas fa-calendar-check"></i> Mes Réservations
                                </a>
                            </li>
                        {% endif %}

                        <!-- Admin only links -->
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-cog"></i> Admin
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="adminMenu">
                                    <li><a class="dropdown-item" href="{{ path('app_user_index') }}">
                                        <i class="fas fa-users"></i> Utilisateurs
                                    </a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_listing_index') }}">
                                        <i class="fas fa-list"></i> Annonces
                                    </a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_appartment_index') }}">
                                        <i class="fas fa-building"></i> Appartements
                                    </a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_booking_index') }}">
                                        <i class="fas fa-calendar"></i> Réservations
                                    </a></li>
                
                                    <li><a class="dropdown-item" href="{{ path('app_review_index') }}">
                                        <i class="fas fa-star"></i> Avis
                                    </a></li>
                                </ul>
                            </li>
                        {% endif %}

                        <!-- Common authenticated user links -->
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">
                                <i class="fas fa-sign-out-alt"></i> Déconnexion
                            </a>
                        </li>
                    {% else %}
                        <!-- Unauthenticated user links -->
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_user_new') }}">Inscription</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    
    <!-- Main Content -->
    <main{% if 'homee' not in app.request.attributes.get('_route', '') %} class="container my-5" style="margin-top: 70px;"{% else %} style="margin-top: 0; padding: 0; margin: 0;"{% endif %}>
        {% block body %}{% endblock %}
    </main>

    <!-- Footer -->
    <footer>
        <div class="container">
            <p><strong>Ekrili Dwira</strong> - Plateforme de location d'appartements en Tunisie</p>
            <p>
                <i class="fas fa-phone"></i> +216 71 123 456 | 
                <i class="fas fa-envelope"></i> info@ekrilidwira.tn
            </p>
            <p>&copy; 2025 Ekrili Dwira - Tous droits réservés</p>
            <div class="social-icons mt-2">
                <a href="#" class="me-2"><i class="fab fa-facebook"></i></a>
                <a href="#" class="me-2"><i class="fab fa-twitter"></i></a>
                <a href="#" class="me-2"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-linkedin"></i></a>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>
