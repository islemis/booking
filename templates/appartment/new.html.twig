{% extends 'base.html.twig' %}

{% block title %}Créer un Appartement{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        h1 {
            color: #343a40;
            text-align: center;
            margin-top: 30px;
        }

        .form-container {
            max-width: 600px;
            margin: 40px auto;
            background-color: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .form-container h5 {
            color: #343a40;
        }

        .btn-save {
            width: 100%;
        }

        .back-btn a {
            text-decoration: none;
            color: #007bff;
        }

        .back-btn a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block body %}
<div class="heritage-pattern">
    <h1><i class="fas fa-plus-circle"></i> Créer un Nouvel Appartement</h1>
</div>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-home"></i> Détails de l'Appartement
                </div>
                <div class="card-body">
                    {# Start the form with Bootstrap classes for layout #}
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.type, 'Type d\'Appartement', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.type) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.numberOfRooms, 'Nombre de Pièces', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.numberOfRooms, {'attr': {'class': 'form-control', 'type': 'number', 'min': '1'}}) }}
                            {{ form_errors(form.numberOfRooms) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.squareMeters, 'Surface (m²)', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.squareMeters, {'attr': {'class': 'form-control', 'type': 'number', 'step': '0.01', 'min': '1'}}) }}
                            {{ form_errors(form.squareMeters) }}
                        </div>
                        
                        <div class="mb-3 form-check">
                            <div class="form-check">
                                {{ form_widget(form.furnished, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(form.furnished, 'Meublé', {'label_attr': {'class': 'form-check-label'}}) }}
                                {{ form_errors(form.furnished) }}
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success btn-lg w-100 mb-2">
                            <i class="fas fa-save"></i> Créer l'Appartement
                        </button>
                    {{ form_end(form) }}

                    <a href="{{ path('app_appartment_index') }}" class="btn btn-secondary w-100">
                        <i class="fas fa-arrow-left"></i> Retour à la Liste
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
