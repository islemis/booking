{{ form_start(form) }}
    <div class="mb-3">
        {{ form_label(form.type, 'Type d\'Appartement', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.type) }}
    </div>
    
    <div class="mb-3">
        {{ form_label(form.numberOfRooms, 'Nombre de Pièces', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.numberOfRooms, {'attr': {'class': 'form-control', 'type': 'number', 'min': '1'}}) }}
        {{ form_errors(form.numberOfRooms) }}
    </div>
    
    <div class="mb-3">
        {{ form_label(form.squareMeters, 'Surface (m²)', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.squareMeters, {'attr': {'class': 'form-control', 'type': 'number', 'step': '0.01', 'min': '1'}}) }}
        {{ form_errors(form.squareMeters) }}
    </div>
    
    <div class="mb-3 form-check">
        {{ form_widget(form.furnished, {'attr': {'class': 'form-check-input'}}) }}
        {{ form_label(form.furnished, 'Meublé', {'label_attr': {'class': 'form-check-label'}}) }}
        {{ form_errors(form.furnished) }}
    </div>

    <button class="btn btn-primary btn-lg w-100">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
