{% extends 'base.html.twig' %}

{% block title %}Détails de l'Appartement{% endblock %}

{% block body %}
    <div class="heritage-pattern">
        <h1><i class="fas fa-home"></i> Détails de l'Appartement</h1>
    </div>

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <th><i class="fas fa-tag"></i> ID</th>
                                    <td>{{ appartment.id }}</td>
                                </tr>
                                <tr>
                                    <th><i class="fas fa-door-open"></i> Type</th>
                                    <td>{{ appartment.type }}</td>
                                </tr>
                                <tr>
                                    <th><i class="fas fa-bed"></i> Nombre de Pièces</th>
                                    <td>{{ appartment.numberOfRooms }}</td>
                                </tr>
                                <tr>
                                    <th><i class="fas fa-ruler"></i> Surface</th>
                                    <td>{{ appartment.squareMeters }} m²</td>
                                </tr>
                                <tr>
                                    <th><i class="fas fa-couch"></i> Meublé</th>
                                    <td>
                                        {% if appartment.furnished %}
                                            <span class="badge badge-success"><i class="fas fa-check"></i> Oui</span>
                                        {% else %}
                                            <span class="badge bg-secondary"><i class="fas fa-times"></i> Non</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer bg-transparent border-top">
                        <a href="{{ path('app_appartment_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour à la Liste
                        </a>
                        
                        <!-- Show edit button only for owner or admin -->
                        {% if is_granted('ROLE_ADMIN') or (app.user and app.user.id == appartment.owner.id) %}
                            <a href="{{ path('app_appartment_edit', {'id': appartment.id}) }}" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                        {% endif %}
                    </div>
                </div>

                <!-- Show delete form only for owner or admin -->
                {% if is_granted('ROLE_ADMIN') or (app.user and app.user.id == appartment.owner.id) %}
                    <div class="mt-4">
                        {{ include('appartment/_delete_form.html.twig') }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
