{% extends 'base.html.twig' %}

{% block title %}Appartements{% endblock %}

{% block body %}
    <div class="heritage-pattern">
        <h1><i class="fas fa-building"></i> Nos Appartements</h1>
    </div>

    {% if appartments is not empty %}
        <div class="row g-4 mb-5">
        {% for appartment in appartments %}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-home"></i> {{ appartment.type }}
                        </h5>
                        <div class="card-text">
                            <p><strong>Nombre de pièces:</strong> {{ appartment.numberOfRooms }} <i class="fas fa-door-open"></i></p>
                            <p><strong>Surface:</strong> {{ appartment.squareMeters }} m² <i class="fas fa-ruler"></i></p>
                            <p>
                                <strong>Meublé:</strong> 
                                {% if appartment.furnished %}
                                    <span class="badge badge-success"><i class="fas fa-check"></i> Oui</span>
                                {% else %}
                                    <span class="badge bg-secondary"><i class="fas fa-times"></i> Non</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-top">
                        <a href="{{ path('app_appartment_show', {'id': appartment.id}) }}" class="btn btn-sm btn-primary me-2">
                            <i class="fas fa-eye"></i> Voir
                        </a>
                        
                        <!-- Show edit/delete buttons only for owner or admin -->
                        {% if is_granted('ROLE_ADMIN') or (app.user and app.user.id == appartment.owner.id) %}
                            <a href="{{ path('app_appartment_edit', {'id': appartment.id}) }}" class="btn btn-sm btn-warning me-2">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            <form method="post" action="{{ path('app_appartment_delete', {'id': appartment.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ appartment.id) }}">
                                <button class="btn btn-sm btn-danger" type="submit">
                                    <i class="fas fa-trash"></i> Supprimer
                                </button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info text-center" role="alert">
            <i class="fas fa-info-circle"></i> Aucun appartement disponible pour le moment
        </div>
    {% endif %}

    <!-- Only show create button for owners and admins -->
    {% if is_granted('ROLE_OWNER') or is_granted('ROLE_ADMIN') %}
        <div class="text-center mt-5">
            <a href="{{ path('app_appartment_new') }}" class="btn btn-success btn-lg">
                <i class="fas fa-plus"></i> Ajouter un Appartement
            </a>
        </div>
    {% endif %}
{% endblock %}
{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        h1 {
            color: #343a40;
            text-align: center;
            margin-top: 30px;
        }

        .form-container {
            max-width: 600px;
            margin: 40px auto;
            background-color: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .form-container h5 {
            color: #343a40;
        }

        .btn-save {
            width: 100%;
        }

        .back-btn a {
            text-decoration: none;
            color: #007bff;
        }

        .back-btn a:hover {
            text-decoration: underline;
        }
        
        .create-btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            text-align: center;
            margin-top: 20px;
        }

    </style>
{% endblock %}