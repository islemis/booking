<form method="post" action="{{ path('app_appartment_delete', {'id': appartment.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet appartement ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ appartment.id) }}">
    <button class="btn btn-danger btn-lg w-100" type="submit">
        <i class="fas fa-trash"></i> Supprimer l'Appartement
    </button>
</form>
